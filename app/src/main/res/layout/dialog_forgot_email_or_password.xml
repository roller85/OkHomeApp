<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:gravity="center_horizontal"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingBottom="3dp" android:paddingTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:paddingLeft="20dp" android:paddingRight="20dp">


        <RelativeLayout
            android:id="@+id/dialogForgotEmailOrPassword_vbtnFindEmailByPhone"
            android:layout_width="match_parent"
            android:layout_height="66dp">
            <LinearLayout
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:adjustViewBounds="true"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content" android:src="@drawable/ic_towel"
                        android:id="@+id/imageView4" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView
                        android:textColor="@color/okHomeGrayDeep"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textSize="14sp"
                        android:text="Find email by phone number"/>
                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="16dp"
                android:layout_height="wrap_content" android:adjustViewBounds="true"
                android:src="@drawable/ic_right_simplearrow_black"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px" android:background="#33000000"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialogForgotEmailOrPassword_vbtnFindPasswordByPhone"
            android:layout_width="match_parent"
            android:layout_height="66dp">
            <LinearLayout
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:adjustViewBounds="true"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content" android:src="@drawable/ic_towel"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView
                        android:textStyle=""
                        android:textColor="@color/okHomeGrayDeep"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textSize="14sp"
                        android:text="Find password by phone number"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="16dp"
                android:layout_height="wrap_content" android:adjustViewBounds="true"
                android:src="@drawable/ic_right_simplearrow_black"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px" android:background="#33000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialogForgotEmailOrPassword_vbtnFindPasswordByEmail"
            android:layout_width="match_parent"
            android:layout_height="66dp">
            <LinearLayout
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:adjustViewBounds="true"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content" android:src="@drawable/ic_towel"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView
                        android:textStyle=""
                        android:textColor="@color/okHomeGrayDeep"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textSize="14sp"
                        android:text="Find password by email"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="16dp"
                android:layout_height="wrap_content" android:adjustViewBounds="true"
                android:src="@drawable/ic_right_simplearrow_black"/>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:background="#08000000"
        android:paddingLeft="20dp" android:paddingRight="20dp"
        android:paddingTop="12dp" android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/dialogChooseCleaningType_tvSubText"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/colorGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:text="Maximum cleaning duration is 8Hours" />

        </LinearLayout>
    </LinearLayout>


    <View android:layout_width="match_parent" android:layout_height="1px" android:background="#11000000"/>

</LinearLayout>


