<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingRight="10dp"
            android:gravity="center|right"
            android:id="@+id/dialogCommon_vbtnCancel"
            android:textColor="@color/colorAppPrimary2"
            android:textSize="14sp"
            android:layout_width="80dp"
            android:layout_height="40dp" android:text="Cancel"/>
        <TextView
            android:paddingRight="10dp"
            android:gravity="center_vertical|right"
            android:id="@+id/dialogCommon_vbtnConfirm"
            android:textColor="@color/colorAppPrimary2"
            android:textSize="14sp"
            android:layout_width="80dp"
            android:layout_height="40dp" android:text="Confirm"/>
    </LinearLayout>
</LinearLayout>
