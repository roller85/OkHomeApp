            <!--android:layout_width="40dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:gravity="center" >-->

            <!--<ImageView-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_width="12dp"-->
                <!--android:adjustViewBounds="true"-->
                <!--android:src="@drawable/ic_more" />-->
        <!--</LinearLayout>-->
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#33000000"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/actWebPage_rlTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/actWebPage_wv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></WebView>

        <ProgressBar
            android:id="@+id/actWebPage_vLoading"
            android:layout_width="30dp"
            android:layout_height="30dp" android:layout_centerInParent="true"/>

    </RelativeLayout>



</RelativeLayout>
