<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:background="#ffffff"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:adjustViewBounds="true"
                android:src="@drawable/img_noti_alarm"
                android:layout_width="110dp"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textColor="#4f5661"
                android:text="The more charge Ok-Credit, The more clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="3dp"
                android:textSize="13sp"
                android:textColor="@color/colorLightGray"
                android:text="Pay now, And feel clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="30dp"
            android:padding="18dp"
            android:background="@drawable/bg_inputbox"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/dialogCalendarSetting_vbtnTerm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13sp"
                    android:hint="How much do you want to charge?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" android:adjustViewBounds="true"
                    android:src="@drawable/ic_downarrow"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/dialogCalendarSetting_vgHoldingTerm"
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="22dp"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content" android:src="@drawable/ic_check_not" />
                    <TextView
                        android:textStyle=""
                        android:text="1.000.000 Rp"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGray"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="+ bonus 10.000 gift"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorLightGray"
                        android:layout_centerVertical="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="22dp"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content" android:src="@drawable/ic_check_not" />
                    <TextView
                        android:text="2.000.000 Rp"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGray"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="+ bonus 20.000 gift"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorLightGray"
                        android:layout_centerVertical="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="22dp"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content" android:src="@drawable/ic_checked" />
                    <TextView
                        android:text="3.000.000 Rp"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGray"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="+ bonus 80.000 gift"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorLightGray"
                        android:layout_centerVertical="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="22dp"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content" android:src="@drawable/ic_check_not" />
                    <TextView
                        android:text="9.000.000 Rp"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGray"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="+ bonus 110.000 gift"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorLightGray"
                        android:layout_centerVertical="true" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/fragmentMakeReservation_vbtnDo"
        android:gravity="center"
        android:background="@color/colorAppPrimary"
        android:paddingTop="10dp" android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <TextView
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Pay Now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            />

    </LinearLayout>
</RelativeLayout>

