<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:layout_height="match_parent">



        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/layerCleaningTipItem_tvTitle"
                android:textColor="@color/okHomeGrayDeep"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무료로 청소를 이용해보세요!"/>

            <TextView
                android:textColor="#717276"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="14sp"
                android:text="다양한 방법으로 포인트 충전이 가능합니다!\n포인트를 모아서 무료로 청소를 이용해보세요!"/>


            <RelativeLayout
                android:layout_marginTop="30dp"
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/actMain_tvSubTitle"
                    android:text="진행중인 프로모션"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="@color/colorLightGray2"
                    android:textSize="12.5sp" />

                <View
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/actMain_tvSubTitle"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="#33000000"/>


            </RelativeLayout>

            <ProgressBar
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/fragmentChargePoint_vLoading"
                android:layout_width="30dp"
                android:layout_height="30dp" android:layout_centerInParent="true" />
            <LinearLayout
                android:paddingTop="6dp"
                android:gravity="center_horizontal"
                android:id="@+id/fragmentChargePoint_vgPromotionItems"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>




</RelativeLayout>

