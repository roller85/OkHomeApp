<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="22dp" android:layout_marginRight="22dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:background="@drawable/bg_inputbox_black"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="bottom|right"
                android:textStyle="italic"
                android:text="청소권"
                android:textSize="28sp"
                android:textColor="#11000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/itemCleaningTicket_ivbtnMore"
                android:layout_gravity="right"
                android:adjustViewBounds="true"
                android:layout_width="13dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_more"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/itemCleaningTicket_tvIssueDate"
                    android:text="발급일 : 2016.06.10"
                    android:textColor="@color/okHomeGrayDeep"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/itemCleaningTicket_tvExpiryDate"
                    android:layout_marginTop="3dp"
                    android:text="만료일 : 2016.07.10"
                    android:textColor="@color/okHomeGrayDeep"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/itemCleaningTicket_tvCleaningDate"
                    android:layout_marginTop="3dp"
                    android:text="청소일 : 지정되지 않음"
                    android:textColor="@color/okHomeGrayDeep"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
</RelativeLayout>