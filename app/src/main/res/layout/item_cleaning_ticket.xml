<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="22dp" android:layout_marginRight="22dp"
        android:layout_marginTop="12dp"
        android:padding="15dp"
        android:background="@drawable/bg_inputbox_black"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/itemCleaningTicket_ivCleaningType"
                android:layout_gravity="bottom|right"
                android:textStyle="italic"
                android:text="청소권"
                android:textSize="24sp"
                android:textColor="#340095da"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="-5dp"
                android:id="@+id/itemCleaningTicket_ivbtnMore"
                android:layout_gravity="right"
                android:adjustViewBounds="true"
                android:layout_width="13dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_more"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="발급일 : "
                        android:textColor="@color/okHomeGray"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/itemCleaningTicket_tvIssueDate"
                        android:text="2016.06.10"
                        android:textColor="@color/okHomeGrayDeep"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="만료일 : "
                        android:textColor="@color/okHomeGray"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/itemCleaningTicket_tvExpiryDate"
                        android:text="2016.06.10"
                        android:textColor="@color/okHomeGrayDeep"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="청소일 : "
                        android:textColor="@color/okHomeGray"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/itemCleaningTicket_tvCleaningDate"
                        android:text="2016.06.10"
                        android:textColor="@color/okHomeGrayDeep"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>



            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
</RelativeLayout>