<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@color/colorLightGray2"
        android:paddingLeft="20dp" android:paddingRight="20dp"
        android:paddingTop="13dp" android:paddingBottom="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:layout_width="13dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_check_type2"/>

            <TextView
                android:id="@+id/fragmentMyCleaningCalendar_tvToolTip"
                android:layout_centerVertical="true"
                android:textSize="12.5sp"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:text="Maximum cleaning duration is 8Hours" />

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px" android:background="#40000000"/>

    <LinearLayout
        android:paddingLeft="14dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/dialogCleaningGridList_llContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:paddingBottom="18dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center|right"
                android:id="@+id/dialogCommon_vbtnCancel"
                android:textColor="@color/colorAppPrimary2"
                android:textSize="14sp"
                android:layout_width="80dp"
                android:layout_height="30dp" android:text="Cancel"/>
            <TextView
                android:gravity="center_vertical|right"
                android:id="@+id/dialogCommon_vbtnConfirm"
                android:textColor="@color/colorAppPrimary2"
                android:textSize="14sp"
                android:layout_width="80dp"
                android:layout_height="30dp" android:text="Confirm"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>