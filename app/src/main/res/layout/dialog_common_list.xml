<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/dialogCommonList_vgTop"
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <TextView
            android:layout_marginLeft="25dp" android:layout_marginRight="25dp"
            android:layout_centerVertical="true"
            android:id="@+id/dialogCommonInputbox_tvTitle"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorAppPrimary2"
            android:text="List items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#33000000"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/dialogCommonList_vgTop"
        android:id="@+id/dialogCommonList_rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
