<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.co.okhome.okhomeapp.view.activity.IntroActivity">


    <LinearLayout
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/actIntro_ivSymbol"
            android:adjustViewBounds="true"
            android:layout_width="48dp"
            android:layout_height="wrap_content" android:src="@drawable/logo_symbol"/>

        <LinearLayout
            android:id="@+id/actIntro_vgCharacter"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/actIntro_ivO"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:layout_width="23dp"
                android:layout_height="wrap_content" android:src="@drawable/logo_character_o"/>

            <ImageView
                android:id="@+id/actIntro_ivK"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:layout_width="23dp"
                android:layout_height="wrap_content" android:src="@drawable/logo_character_k"/>

            <ImageView
                android:id="@+id/actIntro_ivH"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:layout_width="23dp"
                android:layout_height="wrap_content" android:src="@drawable/logo_character_h"/>

            <ImageView
                android:id="@+id/actIntro_ivO2"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:layout_width="23dp"
                android:layout_height="wrap_content" android:src="@drawable/logo_character_o2"/>

            <ImageView
                android:id="@+id/actIntro_ivM"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:layout_width="23dp"
                android:layout_height="wrap_content" android:src="@drawable/logo_character_m"/>

            <ImageView
                android:id="@+id/actIntro_ivE"
                android:adjustViewBounds="true"
                android:layout_width="23dp"
                android:layout_height="wrap_content" android:src="@drawable/logo_character_e"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/actIntro_ivJakrta"
            android:layout_marginTop="14dp"
            android:adjustViewBounds="true"
            android:layout_width="86dp"
            android:layout_height="wrap_content" android:src="@drawable/logo_jakarta"/>

    </LinearLayout>

</RelativeLayout>
