<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp" >

    <RelativeLayout
        android:id="@+id/itemCalendarDay_vBg"
        android:padding="5dp"
        android:background="#05000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/itemCalendarDay_tvDay"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="11sp"
            android:textColor="@color/okHomeGrayDeep"/>

        <ImageView
            android:id="@+id/itemCalendarDay_ivCleaning"
            android:layout_centerInParent="true"
            android:layout_width="24dp"
            android:layout_height="wrap_content" android:adjustViewBounds="true"
            android:src="@drawable/ic_cleaning"/>
    </RelativeLayout>

</RelativeLayout>