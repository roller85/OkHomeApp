<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/actUserInfo_rlTop"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <LinearLayout
            android:id="@+id/actMain_llbtnMore"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="vertical">

            <LinearLayout
                android:id="@+id/common_vbtnBack"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" android:src="@drawable/ic_action_back" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Find email, Change password"
            android:textSize="15.5sp"
            android:textColor="@color/okHomeGrayDeep"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/actMain_llbtnMore" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#28000000"/>
    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="40dp" android:paddingRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="-10dp"
            android:layout_width="160dp"
            android:layout_height="wrap_content" android:adjustViewBounds="true"
            android:src="@drawable/logo"/>

        <LinearLayout
            android:id="@+id/actFECP_vgVerification"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="phone"
                    android:background="@null"
                    android:layout_marginTop="10dp"
                    android:lines="1"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:hint="Input your phone number without '-' character"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:id="@+id/actFECP_etPhone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:layout_marginTop="0dp"
                    android:background="#77000000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/actFECP_vgVerificationCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">
                <EditText
                    android:inputType="numberDecimal"
                    android:background="@null"
                    android:lines="1"
                    android:textSize="13sp"
                    android:gravity="center_vertical"
                    android:hint="Input verification code"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:id="@+id/actFECP_etVerificationCode" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:layout_marginTop="0dp"
                    android:background="#77000000"/>

            </LinearLayout>



            <LinearLayout
                android:paddingLeft="30dp" android:paddingRight="33dp"
                android:layout_marginTop="10dp"
                android:id="@+id/actFECP_vbtnSendVerificationCode"
                android:gravity="center"
                android:background="@color/colorAppPrimary"
                android:paddingTop="10dp" android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="46dp">

                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_width="15dp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content" android:src="@drawable/ic_check_type2"/>

                <TextView
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:text="Send verification code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:id="@+id/textView8" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/actFECP_vgConfirmVerfication"
                android:weightSum="10"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="46dp">

                <LinearLayout
                    android:id="@+id/actFECP_vbtnResendVerificationCode"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:background="#cc7f8a9e"
                    android:paddingTop="10dp" android:paddingBottom="10dp"
                    android:layout_width="0dp"
                    android:layout_height="46dp">

                    <TextView
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:text="Re-Send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_weight="7"
                    android:id="@+id/actFECP_vbtnConfirmVerificationCode"
                    android:gravity="center"
                    android:background="@color/colorAppPrimary"
                    android:paddingTop="10dp" android:paddingBottom="10dp"
                    android:layout_width="0dp"
                    android:layout_height="46dp">

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:layout_width="15dp"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content" android:src="@drawable/ic_check_type2"/>

                    <TextView
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:text="Confirm verification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/actFECP_vgCheckAndChangeInfo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/caption1"
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="#44000000"/>

                <View
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/caption1"
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="#44000000"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/caption1"
                    android:text="Your email is"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="#99000000"
                    android:textSize="12.5sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/actFECP_tvEmail"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/bg_inputbox"
                android:textSize="13sp"
                android:textColor="#bb000000"
                android:layout_marginTop="10dp"
                android:text="944899@gmail.com"
                android:layout_width="match_parent"
                android:layout_height="44dp" />


            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/caption2"
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="#44000000"/>

                <View
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/caption2"
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="#44000000"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/caption2"
                    android:text="If want to change password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="#99000000"
                    android:textSize="12.5sp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#f5f4f4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginLeft="14dp"
                        android:alpha="0.7"
                        android:layout_width="16dp"
                        android:layout_height="wrap_content" android:adjustViewBounds="true" android:src="@drawable/ic_lock2"/>

                    <EditText
                        android:id="@+id/actFECP_etNewPassword"
                        android:lines="1"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:textSize="13sp"
                        android:paddingLeft="14dp" android:paddingRight="14dp"
                        android:gravity="center_vertical"
                        android:hint="Password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="#f5f4f4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginLeft="14dp"
                        android:alpha="0.7"
                        android:layout_width="16dp"
                        android:layout_height="wrap_content" android:adjustViewBounds="true" android:src="@drawable/ic_lock2"/>

                    <EditText
                        android:id="@+id/actFECP_etNewPassword1More"
                        android:inputType="textPassword"
                        android:lines="1"
                        android:background="@null"
                        android:textSize="13sp"
                        android:paddingLeft="14dp" android:paddingRight="14dp"
                        android:gravity="center_vertical"
                        android:hint="One more"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/actFECP_vbtnChangePassword"
                android:paddingLeft="30dp" android:paddingRight="33dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@color/colorAppPrimary"
                android:paddingTop="10dp" android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="46dp">

                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_width="15dp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content" android:src="@drawable/ic_check_type2"/>

                <TextView
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:text="Change password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>