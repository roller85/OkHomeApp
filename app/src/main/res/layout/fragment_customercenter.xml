<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:paddingLeft="60dp" android:paddingRight="60dp"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="150dp"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content" android:src="@drawable/logo"/>


    <RelativeLayout
        android:id="@+id/fragmentCustomerCenter_vbtnContactTel"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="26dp"
                    android:layout_height="wrap_content" android:src="@drawable/ic_phone"/>
            </LinearLayout>

            <TextView
                android:layout_marginLeft="12dp"
                android:textColor="@color/okHomeGrayDeep"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="14sp"
                android:text="Contact via Telephone"/>


        </LinearLayout>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="6dp"
            android:layout_height="wrap_content" android:adjustViewBounds="true"
            android:src="@drawable/ic_rightarrow_gray"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#34000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragmentCustomerCenter_vbtnEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="23dp"
                    android:layout_height="wrap_content" android:src="@drawable/ic_email"/>
            </LinearLayout>

            <TextView
                android:layout_marginLeft="12dp"
                android:textColor="@color/okHomeGrayDeep"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="14sp"
                android:text="Contact via Email"/>

        </LinearLayout>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="6dp"
            android:layout_height="wrap_content" android:adjustViewBounds="true"
            android:src="@drawable/ic_rightarrow_gray"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#34000000"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragmentCustomerCenter_vbtnWhatsApp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="26dp"
                    android:layout_height="wrap_content" android:src="@drawable/ic_lock"/>
            </LinearLayout>


            <TextView
                android:layout_marginLeft="12dp"
                android:textColor="@color/okHomeGrayDeep"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="14sp"
                android:text="Contact via Whats App"/>

        </LinearLayout>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="6dp"
            android:layout_height="wrap_content" android:adjustViewBounds="true"
            android:src="@drawable/ic_rightarrow_gray"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#34000000"/>


    </RelativeLayout>


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:text="Address"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_centerVertical="true" />
            <TextView
                android:gravity="center"
                android:text="Puri A3205, Jalan Puri casablanka, Kuningan, Jakarta selatan"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightGray"
                android:layout_centerVertical="true" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:text="Contact us"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_centerVertical="true" />
            <TextView
                android:gravity="center"
                android:text="dhkim@gmail.com"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightGray"
                android:layout_centerVertical="true" />
            <TextView
                android:gravity="center"
                android:text="+6231 8100 6162"
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightGray"
                android:layout_centerVertical="true" />
        </LinearLayout>
    </LinearLayout>







</LinearLayout>
