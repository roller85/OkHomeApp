<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent" android:orientation="vertical">


    <LinearLayout
        android:padding="20dp"
        android:layout_above="@+id/itemCleaning_vbtnRequest"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/itemCleaning_tvTitle"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorAppPrimary2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Super-Super Home Cleaning package"/>

            <TextView
                android:id="@+id/itemCleaning_tvDesc"
                android:layout_marginTop="14dp"
                android:gravity="left"
                android:textSize="13sp"
                android:textColor="@color/okHomeGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Lorem ipsum is lorem ipsum\nkoala super magahome"/>

            <TextView
                android:id="@+id/itemCleaning_tvPrice"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="@color/colorGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="4 Hours / 180.000Rp"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/itemCleaning_vbtnRequest"
        android:background="@color/colorAppPrimary2"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <ImageView
            android:id="@+id/itemCleaning_ivChk"
            android:layout_marginRight="9dp"
            android:layout_width="15dp"
            android:layout_height="wrap_content" android:adjustViewBounds="true"
            android:src="@drawable/ic_check_type2"/>

        <TextView
            android:textSize="14sp"
            android:id="@+id/itemCleaning_tvRequest"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Request"/>
    </LinearLayout>


</RelativeLayout>
