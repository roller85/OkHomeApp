<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="1px"
        android:id="@+id/fragCommonRecyclerView_rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:layout_width="30dp"
        android:layout_height="30dp" android:layout_centerInParent="true"
        android:id="@+id/fragCommonRecyclerView_pbLoading"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px" android:background="#25000000" />
</RelativeLayout>
