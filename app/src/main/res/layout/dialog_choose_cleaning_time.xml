<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="25dp"
        android:paddingLeft="20dp" android:paddingRight="20dp"
        android:id="@+id/actMakeOneDayReservation_tvDate"
        android:textStyle="italic|bold"
        android:textSize="14sp"
        android:textColor="@color/colorAppPrimary2"
        android:text="2016.02.29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingLeft="20dp" android:paddingRight="20dp"
        android:id="@+id/actMakeOneDayReservation_tvTitle"
        android:textStyle="italic|bold"
        android:textSize="14sp"
        android:textColor="#4f5661"
        android:text="Choose time of starting cleaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/dialogChooseCleaningTime_vbtnTime1"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp" android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/dialogChooseCleaningTime_ivChkTime1"
            android:adjustViewBounds="true"
            android:layout_width="20dp"
            android:layout_height="wrap_content" android:src="@drawable/ic_check_not" />

        <TextView
            android:textSize="13sp"
            android:textColor="@color/okHomeGrayDeep"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="AM 11:00 ~ "/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/dialogChooseCleaningTime_vbtnTime2"
        android:gravity="center_vertical"
        android:paddingLeft="20dp" android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/dialogChooseCleaningTime_ivChkTime2"
            android:adjustViewBounds="true"
            android:layout_width="20dp"
            android:layout_height="wrap_content" android:src="@drawable/ic_checked"/>
        <TextView
            android:textSize="13sp"
            android:textColor="@color/okHomeGrayDeep"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="PM 01:00 ~ "/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

</LinearLayout>


