<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingLeft="14dp" android:paddingRight="14dp"
        android:paddingTop="14dp" android:paddingBottom="14dp"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bg_inputbox_blackdeep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/itemPerioidCleaningForSpecial_tvDate"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorLightGray2"
                    android:layout_height="wrap_content" android:textSize="13.5sp"
                    android:text="12월 10일(월), 17:00"/>

                <TextView
                    android:layout_marginTop="1dp"
                    android:id="@+id/itemPerioidCleaningForSpecial_tvNum"
                    android:layout_width="wrap_content"
                    android:textColor="#cc000000"
                    android:layout_height="wrap_content" android:textSize="13.5sp"
                    android:text="청소 1회차"/>


            </LinearLayout>

            <LinearLayout
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/itemPerioidCleaningForSpecial_tvbtnReq"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/colorAppPrimary2"
                    android:textSize="13.5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="신청하기"/>
                <TextView
                    android:layout_marginTop="1dp"
                    android:id="@+id/itemPerioidCleaningForSpecial_tvAddition"
                    android:layout_width="wrap_content"
                    android:textColor="#cc000000"
                    android:layout_height="wrap_content" android:textSize="13.5sp"
                    android:text="4시간, 50.000Rp 추가됨"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="9.4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="left"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/itemPerioidCleaningForSpecial_ivSpc1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_household_1"
                    android:layout_width="20dp"  android:alpha="1"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/itemPerioidCleaningForSpecial_ivSpc2"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_household_2"
                    android:layout_width="20dp"  android:alpha="0.4"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/itemPerioidCleaningForSpecial_ivSpc3"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_household_5"
                    android:layout_width="20dp"  android:alpha="0.4"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/itemPerioidCleaningForSpecial_ivSpc4"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_household_4"
                    android:layout_width="20dp"  android:alpha="0.4"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/itemPerioidCleaningForSpecial_ivSpc5"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_household_1"
                    android:layout_width="20dp"  android:alpha="0.4"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/itemPerioidCleaningForSpecial_ivSpc6"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_household_5"
                    android:layout_width="20dp"  android:alpha="0.4"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/itemPerioidCleaningForSpecial_ivSpc7"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_household_1"
                    android:layout_width="20dp"  android:alpha="0.4"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/itemPerioidCleaningForSpecial_ivSpc8"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_household_5"
                    android:layout_width="20dp"  android:alpha="0.4"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/itemPerioidCleaningForSpecial_ivSpc9"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_household_1"
                    android:layout_width="20dp"  android:alpha="0.4"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/itemPerioidCleaningForSpecial_ivSpc10"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_household_2"
                    android:layout_width="20dp"  android:alpha="0.4"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
