<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingLeft="20dp" android:paddingRight="20dp"
        android:paddingTop="22dp" android:paddingBottom="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/layerCleaningTipItem_tvTitle"
                    android:textColor="@color/okHomeGrayDeep"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Want special cleaning?"/>

                <TextView
                    android:layout_marginTop="2dp"
                    android:id="@+id/itemPeriodPaymentItem_tvTitle"
                    android:layout_width="wrap_content"
                    android:textColor="@color/colorLightGray"
                    android:layout_height="wrap_content" android:textSize="14sp"
                    android:text="화장실, 베란다, 어쩌구 등등 청소도 같이 해보세요!"/>

                <!-- 리스트 컨텐츠 -->
                <LinearLayout
                    android:layout_marginTop="17dp"
                    android:id="@+id/dialogPeriodSpecialPackage_vgItems"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <include layout="@layout/item_periodcleaning_forspecial" />
                    <include layout="@layout/item_periodcleaning_forspecial" />
                    <include layout="@layout/item_periodcleaning_forspecial" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorLightGray2"
                android:textSize="14sp"
                android:text="※ 전체 청소 가격 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/okHomeGrayDeep"
                android:textSize="14sp"
                android:text="400.000 Rupiah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorLightGray2"
                android:textSize="14sp"
                android:text="※ 전체 청소 시간 : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/okHomeGrayDeep"
                android:textSize="14sp"
                android:text="4 Hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center|right"
                android:id="@+id/dialogCommon_vbtnCancel"
                android:textColor="@color/colorAppPrimary2"
                android:textSize="14sp"
                android:layout_width="80dp"
                android:layout_height="30dp" android:text="취소"/>
            <TextView
                android:gravity="center_vertical|right"
                android:id="@+id/dialogCommon_vbtnConfirm"
                android:textColor="@color/colorAppPrimary2"
                android:textSize="14sp"
                android:layout_width="80dp"
                android:layout_height="30dp" android:text="결제하기"/>
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
