<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_above="@+id/fragMakeReservation_llBottom"
        android:paddingLeft="20dp" android:paddingRight="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:id="@+id/layerMenuItems_ivPhoto"
            android:src="@drawable/img_user_blank"
            android:scaleType="centerCrop"
            app:riv_oval="true" />

        <TextView
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Hello Jo Songmin!" android:textSize="16.5sp"
            android:textColor="@color/okHomeGrayDeep"/>

        <TextView
            android:textColor="#4aacf1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="15dp" android:text="Rp 50.000"/>

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You can get our service 5 times more" android:textSize="12.5sp"
            android:textColor="@color/okHomeGray"/>


        <RelativeLayout
            android:layout_marginLeft="20dp" android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="10dp" android:layout_marginLeft="10dp"
                android:layout_centerInParent="true"
                android:id="@+id/actMain_tvSubTitle"
                android:text="Schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#55000000" android:textStyle="bold"
                android:textSize="12.5sp" />

            <View
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/actMain_tvSubTitle"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="1px" android:background="#33000000"/>

            <View
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/actMain_tvSubTitle"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="1px" android:background="#33000000"/>


        </RelativeLayout>



        <LinearLayout
            android:layout_marginTop="25dp"
            android:weightSum="10"
            android:paddingLeft="20dp" android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_weight="10"
                android:orientation="vertical"
                android:layout_width="0dp" android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Tommorow, 7. 8(Mon), 13:00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:textColor="#55000000"
                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Smith"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:textColor="@color/colorAppPrimary"
                                android:textSize="12.5sp" />
                            <TextView
                                android:text=" will visit your home for"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:textColor="#4e5562"
                                android:textSize="12.5sp" />
                            <TextView
                                android:text=" Clear Clean"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:textColor="@color/colorAppPrimary"
                                android:textSize="12.5sp" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:paddingLeft="20dp" android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="22dp"
                android:layout_weight="10"
                android:orientation="vertical"
                android:layout_width="0dp" android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="2 days later, 7. 9(Tue), 13:00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:textColor="#55000000"
                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Smith"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:textColor="@color/colorAppPrimary"
                                android:textSize="12.5sp" />

                            <TextView
                                android:text=" will visit your home for"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:textColor="#4e5562"
                                android:textSize="12.5sp" />

                            <TextView
                                android:text=" Restroom clean"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:textColor="@color/colorAppPrimary"
                                android:textSize="12.5sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:weightSum="10"
            android:paddingLeft="20dp" android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="22dp"
                android:layout_weight="10"
                android:orientation="vertical"
                android:layout_width="0dp" android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="2 days later, 7. 9(Tue), 13:00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:textColor="#55000000"
                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="Smith"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:textColor="@color/colorAppPrimary"
                                android:textSize="12.5sp" />

                            <TextView
                                android:text=" will visit your home for"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:textColor="#4e5562"
                                android:textSize="12.5sp" />

                            <TextView
                                android:text=" Restroom clean"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:textColor="@color/colorAppPrimary"
                                android:textSize="12.5sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_margin="1dp"
                android:layout_width="3dp"
                android:layout_height="3dp" android:background="@drawable/circle_gray_simple" />
            <View
                android:layout_margin="1dp"
                android:layout_width="3dp"
                android:layout_height="3dp" android:background="@drawable/circle_gray_simple" />
            <View
                android:layout_margin="1dp"
                android:layout_width="3dp"
                android:layout_height="3dp" android:background="@drawable/circle_gray_simple" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="14dp" android:layout_marginRight="14dp"
        android:layout_marginBottom="14dp"
        android:id="@+id/fragMakeReservation_llBottom"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="52dp">


        <LinearLayout
            android:id="@+id/fragmentMakeReservation_vbtnDo"
            android:gravity="center"
            android:background="@color/colorAppPrimary"
            android:paddingTop="10dp" android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="15dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content" android:src="@drawable/ic_check_type2"/>

            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:text="Make reservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>