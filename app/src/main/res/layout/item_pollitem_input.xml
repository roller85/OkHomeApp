            android:padding="14dp"
            android:id="@+id/itemPollItemInput_etInput"
            android:textSize="14sp"
            android:background="@drawable/bg_inputbox_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
