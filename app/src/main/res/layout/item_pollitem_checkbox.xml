<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemPollItemCheckBox_ivChk"
            android:layout_marginRight="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp" android:src="@drawable/ic_check_not_deep"/>

        <TextView
            android:textColor="@color/okHomeGrayDeep"
            android:id="@+id/itemPollItemCheckBox_tvText"
            android:textSize="15sp"
            android:text="샘플텍스트입니다"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
