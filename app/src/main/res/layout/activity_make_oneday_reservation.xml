<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actMakeOneDayReservation_rlContents"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="0dp" android:paddingBottom="5dp"
        android:paddingTop="18dp"
        android:id="@+id/actMakeOneDayReservation_rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/actMain_llbtnX"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="vertical">

            <ImageView
                android:adjustViewBounds="true"
                android:layout_width="14dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_cross" />
        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">

            <View
                android:layout_width="10dp"
                android:layout_height="10dp" />
            <TextView
                android:id="@+id/actMakeOneDayReservation_tvTitle"
                android:textSize="16.5sp"
                android:textColor="#4f5661"
                android:text="Loading..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <id.co.okhome.okhomeapp.view.customview.ProgressDotsView
                android:layout_marginTop="10dp"
                android:id="@+id/actMakeOneDayReservation_pdv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></id.co.okhome.okhomeapp.view.customview.ProgressDotsView>


        </LinearLayout>

    </RelativeLayout>




    <LinearLayout
        android:orientation="vertical"
        android:layout_above="@+id/actMakeOneDayReservation_llBottom"
        android:layout_below="@+id/actMakeOneDayReservation_rlTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/actMakeOneDayReservation_rlCalendar">

        <id.co.okhome.okhomeapp.view.customview.OkHomeViewPager
            android:id="@+id/actMakeOneDayReservation_vpContents"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </id.co.okhome.okhomeapp.view.customview.OkHomeViewPager>
    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:gravity="right"
        android:paddingLeft="12dp" android:paddingRight="12dp"
        android:paddingTop="12dp" android:paddingBottom="12dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/actMakeOneDayReservation_llBottom2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/shawdowcircle"
            android:layout_width="46dp"
            android:layout_height="46dp">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_right_simplearrow_right_white"/>
        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:background="@drawable/shawdowcircle"
            android:layout_width="46dp"
            android:layout_height="46dp">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_right_simplearrow_left_white"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:weightSum="10"
        android:layout_alignParentBottom="true"
        android:id="@+id/actMakeOneDayReservation_llBottom"
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <RelativeLayout
            android:id="@+id/actMakeOneDayReservation_vbtnLeft"
            android:layout_weight="5"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="#7781828c"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/actMakeOneDayReservation_tvLeft"
                android:textSize="15sp"
                android:gravity="center"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/actMakeOneDayReservation_vbtnRight"
            android:layout_weight="5"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@color/colorAppPrimary"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/actMakeOneDayReservation_tvRight"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="Berikut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff" />

                <TextView
                    android:paddingTop="3dp"
                    android:id="@+id/actMakeOneDayReservation_tvCount"
                    android:layout_marginLeft="4dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="(1/5)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff" />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
