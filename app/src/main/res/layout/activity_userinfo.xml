<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/actUserInfo_rlTop"
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <LinearLayout
            android:id="@+id/actMain_llbtnMore"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="vertical">


            <LinearLayout
                android:id="@+id/common_vbtnBack"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView
                    android:adjustViewBounds="true"
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" android:src="@drawable/ic_action_back" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Profile setting" android:textSize="17.5sp"
            android:textColor="@color/okHomeGrayDeep"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/actMain_llbtnMore" />

    </RelativeLayout>


    <ScrollView
        android:scrollbars="none"
        android:layout_below="@+id/actUserInfo_rlTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="25dp"
                android:paddingBottom="35dp"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/actUseInfo_vbtnPhoto"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/actUserInfo_ivPhoto"
                            android:layout_centerVertical="true"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:src="@drawable/sample_face"
                            android:scaleType="centerCrop"
                            app:riv_oval="true" />

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="6dp"
                            android:layout_height="wrap_content" android:adjustViewBounds="true"
                            android:src="@drawable/ic_rightarrow_gray"/>

                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="1px" android:background="#33000000"/>


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/actUserInfo_vbtnPhone"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Phone"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorLightGray"
                        android:id="@+id/textView5" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp">

                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/actUserInfo_tvPhone"
                                android:text="+82 10 9314 9449"
                                android:textSize="13.5sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGray"
                                android:layout_centerVertical="true" />

                        </LinearLayout>
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="6dp"
                            android:layout_height="wrap_content" android:adjustViewBounds="true"
                            android:src="@drawable/ic_rightarrow_gray"/>

                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="1px" android:background="#33000000"/>

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/actUserInfo_vbtnEmail"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Email"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorLightGray" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp">

                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/actUserInfo_tvEmail"
                                android:text="944899@gmail.com"
                                android:textSize="13.5sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorGray"
                                android:layout_centerVertical="true" />
                        </LinearLayout>
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="6dp"
                            android:layout_height="wrap_content" android:adjustViewBounds="true"
                            android:src="@drawable/ic_rightarrow_gray"/>

                        <View
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="1px" android:background="#33000000"/>

                    </RelativeLayout>
                </LinearLayout>

                <!--집 정보-->
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Home address"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorLightGray" />

                    <!-- 아이템-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="46dp">

                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:hint="City"
                                    android:textSize="13.5sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorGray"
                                    android:layout_centerVertical="true" />

                            </LinearLayout>

                            <ImageView
                                android:layout_marginBottom="10dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_width="10dp"
                                android:src="@drawable/ic_right_simplearrow_black"
                                android:layout_height="wrap_content" android:adjustViewBounds="true" />

                            <View
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="1px" android:background="#33000000"/>

                        </RelativeLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="10">

                            <LinearLayout
                                android:layout_marginRight="10dp"
                                android:layout_weight="5"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="46dp">

                                    <LinearLayout
                                        android:layout_centerVertical="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:hint="State / Province"
                                            android:textSize="13.5sp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorGray"
                                            android:layout_centerVertical="true" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_marginBottom="10dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_width="10dp"
                                        android:src="@drawable/ic_right_simplearrow_black"
                                        android:layout_height="wrap_content" android:adjustViewBounds="true" />

                                    <View
                                        android:layout_alignParentBottom="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="1px" android:background="#33000000"/>

                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_weight="5"
                                android:orientation="vertical"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="46dp">

                                    <LinearLayout
                                        android:layout_centerVertical="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <TextView
                                            android:id="@+id/dialogChangeAddress_tvState"
                                            android:hint="State / Province"
                                            android:textSize="13.5sp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorGray"
                                            android:layout_centerVertical="true" />

                                    </LinearLayout>

                                    <ImageView
                                        android:layout_marginBottom="10dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_width="10dp"
                                        android:src="@drawable/ic_right_simplearrow_black"
                                        android:layout_height="wrap_content" android:adjustViewBounds="true" />

                                    <View
                                        android:layout_alignParentBottom="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="1px" android:background="#33000000"/>

                                </RelativeLayout>
                            </LinearLayout>

                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="46dp">

                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:hint="Address line"
                                    android:textSize="13.5sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorGray"
                                    android:layout_centerVertical="true" />

                            </LinearLayout>

                            <ImageView
                                android:layout_marginBottom="10dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_width="10dp"
                                android:src="@drawable/ic_right_simplearrow_black"
                                android:layout_height="wrap_content" android:adjustViewBounds="true" />

                            <View
                                android:layout_alignParentBottom="true"
                                android:layout_width="match_parent"
                                android:layout_height="1px" android:background="#33000000"/>

                        </RelativeLayout>



                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <LinearLayout
        android:layout_margin="14dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:id="@+id/fragmentMyCleaningCalendar_btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:background="@drawable/shawdowcircle"
            android:layout_width="48dp"
            android:layout_height="48dp">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content" android:src="@drawable/ic_check_type2"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:background="@color/colorAppPrimary"
        android:paddingTop="15dp" android:paddingBottom="15dp"
        android:paddingLeft="20dp" android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_width="13dp"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content" android:src="@drawable/ic_chk_circle_white"/>

        <TextView
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            />

    </LinearLayout>
</RelativeLayout>
