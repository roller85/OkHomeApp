<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:gravity="center_horizontal"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_marginTop="4dp"
        android:layout_width="119dp"
        android:layout_height="wrap_content" android:adjustViewBounds="true"
        android:src="@drawable/img_noti_team"/>

    <LinearLayout
        android:paddingLeft="32dp" android:paddingRight="32dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Mr Jo! We will go to your house"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorLightGray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="PM03:00, Sun 28.02.2016"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_centerVertical="true" />

            </LinearLayout>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px" android:background="#22000000"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:paddingLeft="32dp" android:paddingRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="bottom"
                android:text="Service description"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightGray"/>


            <LinearLayout
                android:id="@+id/fragmentMakeReservationDayCleaningInvoice_vbtnServices"
                android:paddingLeft="12dp" android:paddingRight="12dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="38dp" android:background="@color/colorAppPrimary2">

                <ImageView
                    android:layout_marginRight="8dp"
                    android:layout_width="14dp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content" android:src="@drawable/ic_more_2"/>
                <TextView
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="#ffffff" android:text="More service"/>

            </LinearLayout>
        </FrameLayout>

        <View
            android:layout_marginLeft="32dp" android:layout_marginRight="32dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#22000000"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="32dp" android:layout_marginRight="32dp"
                android:id="@+id/fragmentMakeReservationDayCleaningInvoice_vgCleaningItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:orientation="vertical">


            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>
