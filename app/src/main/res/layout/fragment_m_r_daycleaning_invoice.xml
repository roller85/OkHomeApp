<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content" android:adjustViewBounds="true"
            android:src="@drawable/img_noti_alarm"/>

        <LinearLayout
            android:paddingLeft="32dp" android:paddingRight="32dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="We will go to your house at"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightGray"/>

            <RelativeLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="12dp"
                    android:background="@drawable/bg_inputbox"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fragmentMakeReservationDayCleaningInvoice_tvDatetime"
                        android:text="PM03:00, Sun 28.02.2016"
                        android:textSize="13sp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGray"
                        android:layout_centerVertical="true" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:paddingLeft="32dp" android:paddingRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="Service description"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightGray" />

        </FrameLayout>

        <View
            android:layout_marginLeft="32dp" android:layout_marginRight="32dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#44000000"/>

        <LinearLayout
            android:paddingTop="8dp"
            android:layout_marginLeft="32dp" android:layout_marginRight="32dp"
            android:id="@+id/fragmentMakeReservationDayCleaningInvoice_vgServiceItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="32dp"
        android:id="@+id/fragmentMakeReservationDayCleaningInvoice_vbtnRequestSpecialCleaning"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp" android:paddingRight="10dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="42dp" android:background="@drawable/square_line_appcolor">

        <TextView
            android:textSize="12.5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="@color/colorAppPrimary2"
            android:text="Request Speical cleaning" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/fragmentMakeReservationDayCleaningInvoice_vgSpecialPackage"
        android:layout_marginTop="14dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:paddingLeft="32dp" android:paddingRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/fragmentMakeReservationDayCleaningInvoice_vbtnServices"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textColor="@color/colorAppPrimary2"
                    android:text="See all package" />

            </LinearLayout>

            <TextView
                android:text="Special cleaning"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightGray"
                android:id="@+id/textView10" />

        </FrameLayout>

        <View
            android:layout_marginLeft="32dp" android:layout_marginRight="32dp"
            android:layout_marginTop="12dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px" android:background="#44000000"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingTop="8dp"
                android:layout_marginLeft="32dp" android:layout_marginRight="32dp"
                android:id="@+id/fragmentMakeReservationDayCleaningInvoice_vgCleaningItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:orientation="vertical">


            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>
