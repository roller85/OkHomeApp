<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_marginTop="5dp"
            android:paddingLeft="24dp" android:paddingRight="24dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:padding="15dp"
                android:orientation="vertical"
                android:background="@drawable/bg_inputbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorLightGray2"
                        android:textSize="13.5sp"
                        android:text="예상 1회 청소 가격 : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragmentMRPCP_tvPricePer1"
                        android:textColor="@color/okHomeGrayDeep"
                        android:textSize="13.5sp"
                        android:text="400.000 Rupiah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorLightGray2"
                        android:textSize="13.5sp"
                        android:text="예상 1회 청소 시간 : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragmentMRPCP_tvCleaningTime"
                        android:textColor="@color/okHomeGrayDeep"
                        android:textSize="13.5sp"
                        android:text="5 Hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorLightGray2"
                        android:textSize="13.5sp"
                        android:text="선택한 주기 : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragmentMRPCP_tvPeriod"
                        android:textColor="@color/okHomeGrayDeep"
                        android:textSize="13.5sp"
                        android:text="1주일에 4번"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>



            <RelativeLayout
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="#33000000"/>
                <TextView
                    android:layout_marginRight="10dp" android:layout_marginLeft="10dp"
                    android:id="@+id/title"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:textColor="#77000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textSize="13sp"
                    android:text="회원님을 위한 결제상품 추천"/>

                <View
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="#33000000"/>
            </RelativeLayout>

            <!-- item들 -->
            <LinearLayout
                android:id="@+id/fragmentMRPCP_vgPayItems"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingLeft="14dp" android:paddingRight="14dp"
                    android:paddingTop="16dp" android:paddingBottom="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:background="@drawable/bg_inputbox_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_done_circle"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="#aa000000"
                                android:layout_height="wrap_content" android:textSize="15sp"
                                android:text="2주 패키지"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="#aa000000"
                                android:layout_height="wrap_content" android:textSize="12sp"
                                android:text="일주일에 4번씩 2주동안"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#33000000"
                                    android:layout_height="wrap_content" android:textSize="13sp"
                                    android:text="190.000Rp"/>
                                <View
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="50dp"
                                    android:layout_height="1px" android:background="#33000000"/>
                            </FrameLayout>

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:textColor="#aa000000"
                                android:layout_height="wrap_content" android:textSize="14sp"
                                android:text="150.000Rp"/>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/actPayVaConfirm_vgHowtoType2"
                    android:paddingLeft="14dp" android:paddingRight="14dp"
                    android:paddingTop="16dp" android:paddingBottom="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:background="@drawable/bg_inputbox_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_done_circle"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="#aa000000"
                                android:layout_height="wrap_content" android:textSize="15sp"
                                android:text="2주 패키지"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="#aa000000"
                                android:layout_height="wrap_content" android:textSize="12sp"
                                android:text="일주일에 4번씩 2주동안"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#33000000"
                                    android:layout_height="wrap_content" android:textSize="13sp"
                                    android:text="190.000Rp"/>
                                <View
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="50dp"
                                    android:layout_height="1px" android:background="#33000000"/>
                            </FrameLayout>

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:textColor="#aa000000"
                                android:layout_height="wrap_content" android:textSize="14sp"
                                android:text="150.000Rp"/>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:paddingLeft="14dp" android:paddingRight="14dp"
                    android:paddingTop="16dp" android:paddingBottom="16dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:background="@drawable/bg_inputbox_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginRight="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_done_circle"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="#aa000000"
                                android:layout_height="wrap_content" android:textSize="15sp"
                                android:text="2주 패키지"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="#aa000000"
                                android:layout_height="wrap_content" android:textSize="12sp"
                                android:text="일주일에 4번씩 2주동안"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:textColor="#33000000"
                                    android:layout_height="wrap_content" android:textSize="13sp"
                                    android:text="190.000Rp"/>
                                <View
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="50dp"
                                    android:layout_height="1px" android:background="#33000000"/>
                            </FrameLayout>

                            <TextView
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:textColor="#aa000000"
                                android:layout_height="wrap_content" android:textSize="14sp"
                                android:text="150.000Rp"/>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:textColor="#66000000"
                    android:layout_height="wrap_content" android:textSize="11sp"
                    android:text="※"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#66000000"
                    android:layout_height="wrap_content" android:textSize="11sp"
                    android:text="회원님은 500.000 포인트를 보유중입니다. 포인트는 결제시 현금과 동일하게 사용이 가능합니다."/>
            </LinearLayout>

            <!--<TextView-->
                <!--gra-->
                <!--android:textSize="13sp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
