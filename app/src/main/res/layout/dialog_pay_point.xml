<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="25dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:textColor="#dd000000"
            android:layout_height="wrap_content" android:textSize="16sp"
            android:text="포인트 사용하여 구매하기"/>

        <LinearLayout
            android:layout_marginTop="48dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="구매내역"
                android:textColor="@color/colorLightGray"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dialogPayPoint_tvDesc"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/dialogPayPoint_tvbtnCharge"
                android:lines="1"
                android:hint=""
                android:textColor="#dd000000"
                android:text="스페셜청소 5시간"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="보유중인 포인트"
                    android:textColor="@color/colorLightGray"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/dialogPayPoint_tvNotEnough"
                    android:layout_marginLeft="10dp"
                    android:text="※ 포인트가 부족합니다."
                    android:textColor="@color/colorAppPrimary"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/dialogPayPoint_vbtnCharge"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorAppPrimary"
                    android:padding="13dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginRight="7dp"
                        android:adjustViewBounds="true"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" android:src="@drawable/ic_downarrow_white"/>

                    <TextView
                        android:lines="1"
                        android:hint=""
                        android:textColor="#ffffff"
                        android:text="충전하기"
                        android:textSize="14sp"
                        android:inputType="number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <TextView
                    android:layout_toLeftOf="@+id/dialogPayPoint_vbtnCharge"
                    android:lines="1"
                    android:id="@+id/dialogPayPoint_tvCurrentPoint"
                    android:background="@drawable/bg_inputbox_black"
                    android:hint=""
                    android:textColor="#dd000000"
                    android:text="100.000 포인트"
                    android:padding="13dp"
                    android:textSize="14sp"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>


            <TextView
                android:layout_marginTop="20dp"
                android:text="구매에 필요한 포인트"
                android:textColor="@color/colorLightGray"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/dialogPayPoint_tvNeedPoint"
                android:textColor="#dd000000"
                android:layout_marginTop="5dp"
                android:lines="1"
                android:background="@drawable/bg_inputbox_black"
                android:hint=""
                android:text="200.000 포인트"
                android:padding="13dp"
                android:textSize="14sp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="18dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:id="@+id/dialogCommon_vbtnCancel"
            android:textColor="@color/colorAppPrimary2"
            android:textSize="14sp"
            android:layout_width="70dp"
            android:layout_height="30dp" android:text="닫기"/>
        <TextView
            android:gravity="center_vertical|right"
            android:id="@+id/dialogCommon_vbtnConfirm"
            android:textColor="@color/colorAppPrimary2"
            android:textSize="14sp"
            android:layout_width="80dp"
            android:layout_height="30dp" android:text="구매하기"/>
    </LinearLayout>
</LinearLayout>


