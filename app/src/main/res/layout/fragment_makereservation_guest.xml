<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/fragmentMakeReservation_vp"
            android:layout_width="match_parent"
            android:layout_height="240dp">

        </android.support.v4.view.ViewPager>

        <id.co.okhome.okhomeapp.view.customview.ProgressDotsView
            android:layout_marginTop="14dp"
            android:id="@+id/fragmentMakeReservation_pdv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></id.co.okhome.okhomeapp.view.customview.ProgressDotsView>



        <LinearLayout
            android:paddingLeft="50dp" android:paddingRight="50dp"
            android:layout_marginTop="30dp"
            android:id="@+id/fragmentMakeReservationGuest_vbtnDo"
            android:gravity="center"
            android:background="@color/colorAppPrimary"
            android:paddingTop="10dp" android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="58dp">

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="15dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content" android:src="@drawable/ic_check_type2"/>

            <TextView
                android:textSize="17sp"
                android:gravity="center"
                android:text="Make a reservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragmentMakeReservation_vgLogin"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#717276"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="13sp"
                android:text="For full access of our service"
                android:id="@+id/textView6" />

            <TextView
                android:id="@+id/fragmentMakeReservationGuest_tvbtnLogin"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorAppPrimary2"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="13sp"
                android:text="Login"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="#717276"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="13sp"
                android:text="or" />


            <TextView
                android:id="@+id/fragmentMakeReservationGuest_tvbtnSignup"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorAppPrimary2"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="13sp"
                android:text="Sign up"/>

        </LinearLayout>

    </LinearLayout>





</RelativeLayout>
