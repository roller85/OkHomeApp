<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/okHomeGrayDeep"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blow your mind of cleaning"/>

        <TextView
            android:id="@+id/fragmentMakeReservationGuest_tvSubTitle"
            android:textColor="#717276"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="14sp"
            android:text="You've just started to\nChange your life for better"/>


        <ImageView
            android:id="@+id/fragmentMakeReservationGuest_ivThumb"
            android:layout_marginTop="30dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content" android:adjustViewBounds="true"
            android:src="@drawable/img_plunger"/>

        <LinearLayout
            android:paddingLeft="20dp" android:paddingRight="20dp"
            android:layout_marginTop="30dp"
            android:id="@+id/fragmentMakeReservationGuest_vbtnDo"
            android:gravity="center"
            android:background="@color/colorAppPrimary"
            android:paddingTop="10dp" android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="15dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content" android:src="@drawable/ic_check_type2"/>

            <TextView
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:text="Make reservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#717276"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="13sp"
                android:text="For full access our service"/>

            <TextView
                android:id="@+id/fragmentMakeReservationGuest_tvbtnLogin"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorAppPrimary2"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="13sp"
                android:text="Login"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="#717276"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="13sp"
                android:text="or" />


            <TextView
                android:id="@+id/fragmentMakeReservationGuest_tvbtnSignup"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorAppPrimary2"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="13sp"
                android:text="Sign up"/>

        </LinearLayout>


    </LinearLayout>





</RelativeLayout>
