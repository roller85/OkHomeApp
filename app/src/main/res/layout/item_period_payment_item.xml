<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingLeft="14dp" android:paddingRight="14dp"
        android:paddingTop="14dp" android:paddingBottom="14dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="@drawable/bg_inputbox_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemPeriodPaymentItem_ivChk"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_done_circle"
            android:layout_width="24dp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/itemPeriodPaymentItem_tvTitle"
                    android:layout_width="wrap_content"
                    android:textColor="#aa000000"
                    android:layout_height="wrap_content" android:textSize="15sp"
                    android:text="2주 패키지"/>
                <TextView
                    android:id="@+id/itemPeriodPaymentItem_tvSub"
                    android:layout_width="wrap_content"
                    android:textColor="#88000000"
                    android:layout_height="wrap_content" android:textSize="12sp"
                    android:text="일주일에 4번씩 2주동안"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_gravity="right"
                            android:id="@+id/itemPeriodPaymentItem_tvPriceBefore"
                            android:layout_width="wrap_content"
                            android:textColor="#55000000"
                            android:layout_height="wrap_content" android:textSize="13sp"
                            android:text="190.000Rp"/>
                        <View
                            android:id="@+id/itemPeriodPaymentItem_vCancelLine"
                            android:layout_gravity="center"
                            android:layout_width="60dp"
                            android:layout_height="2px" android:background="#77000000"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/itemPeriodPaymentItem_tvDiscountRibu"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorPetSister"
                        android:layout_height="wrap_content" android:textSize="10sp"
                        android:text="-10 Ribu"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/itemPeriodPaymentItem_tvPrice"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:textColor="#aa000000"
                    android:layout_height="wrap_content" android:textSize="13sp"
                    android:text="150.000Rp"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
