<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="32dp" android:paddingRight="32dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/fragmentMakeReservationRequestorInfo_vbtnName"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Siapa namanya?"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorLightGray"
            android:id="@+id/textView2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <LinearLayout

                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fragmentMakeReservationRequestorInfo_tvName"
                    android:inputType="text"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_centerVertical="true" />

            </LinearLayout>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="6dp"
                android:layout_height="wrap_content" android:adjustViewBounds="true"
                android:src="@drawable/ic_rightarrow_gray"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px" android:background="#44000000"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmentMakeReservationRequestorInfo_vbtnPhone"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Berapa nomor hp anda?"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorLightGray"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fragmentMakeReservationRequestorInfo_tvPhone"
                    android:inputType="phone"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_centerVertical="true" />

            </LinearLayout>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="6dp"
                android:layout_height="wrap_content" android:adjustViewBounds="true"
                android:src="@drawable/ic_rightarrow_gray"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px" android:background="#44000000"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmentMakeReservationRequestorInfo_vbtnEmail"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Apa yang Anda email?"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorLightGray"/>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="46dp">

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fragmentMakeReservationRequestorInfo_tvEmail"
                    android:inputType="textEmailAddress"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_centerVertical="true" />

            </LinearLayout>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="6dp"
                android:layout_height="wrap_content" android:adjustViewBounds="true"
                android:src="@drawable/ic_rightarrow_gray"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px" android:background="#44000000"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragmentMakeReservationRequestorInfo_vbtnAddress"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Tinggal di mana?"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorLightGray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fragmentMakeReservationRequestorInfo_tvAddress"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorGray"
                        android:layout_centerVertical="true" />

                </LinearLayout>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="6dp"
                    android:layout_height="wrap_content" android:adjustViewBounds="true"
                    android:src="@drawable/ic_rightarrow_gray"/>
                <View
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="1px" android:background="#44000000"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:hint="Town"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_centerVertical="true" />

            </LinearLayout>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="6dp"
                android:layout_height="wrap_content" android:adjustViewBounds="true"
                android:src="@drawable/ic_rightarrow_gray"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px" android:background="#44000000"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:hint="Locality"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGray"
                    android:layout_centerVertical="true" />

            </LinearLayout>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="6dp"
                android:layout_height="wrap_content" android:adjustViewBounds="true"
                android:src="@drawable/ic_rightarrow_gray"/>
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1px" android:background="#44000000"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:gravity="center"
        android:background="@drawable/bg_inputbox"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <EditText
            android:lines="1"
            android:inputType="textEmailAddress"
            android:background="@null"
            android:textSize="13sp"
            android:paddingLeft="14dp" android:paddingRight="14dp"
            android:gravity="center_vertical"
            android:hint="Address line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/actSignUp_etEmail" />

    </LinearLayout>
</LinearLayout>
